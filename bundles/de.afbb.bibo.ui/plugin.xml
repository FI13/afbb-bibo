<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="de.afbb.bibo.ui.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="RCP Perspective"
            class="de.afbb.bibo.ui.Perspective"
            id="io.github.davidbecker.rcprapbootstrap.ui.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            name="Message"
            allowMultiple="true"
            icon="icons/sample2.gif"
            class="de.afbb.bibo.ui.View"
            id="io.github.davidbecker.rcprapbootstrap.ui.view">
      </view>
      <view
            name="Mailboxes"
            allowMultiple="true"
            icon="icons/sample3.gif"
            class="de.afbb.bibo.ui.NavigationView"
            id="io.github.davidbecker.rcprapbootstrap.ui.navigationView">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            name="Mail"
            id="io.github.davidbecker.rcprapbootstrap.ui.category">
      </category>
      <command
            name="Open Mailbox"
            description="Opens a mailbox"
            categoryId="io.github.davidbecker.rcprapbootstrap.ui.category"
            id="io.github.davidbecker.rcprapbootstrap.ui.open">
      </command>
      <command
            name="Open Message Dialog"
            description="Open a message dialog"
            categoryId="io.github.davidbecker.rcprapbootstrap.ui.category"
            id="io.github.davidbecker.rcprapbootstrap.ui.openMessage">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="io.github.davidbecker.rcprapbootstrap.ui.open"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="CTRL+SHIFT+O">
      </key>
      <key
            commandId="io.github.davidbecker.rcprapbootstrap.ui.openMessage"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="CTRL+SHIFT+M">
      </key>
      <key
            commandId="org.eclipse.ui.file.exit"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="CTRL+SHIFT+Q">
      </key>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="io.github.davidbecker.rcprapbootstrap.ui.application"
            name="Bootstrap">
         <property
               name="appName"
               value="Bootstrap">
         </property>
      </product>
   </extension>

</plugin>
